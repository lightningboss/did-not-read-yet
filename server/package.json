{
  "name": "server",
  "scripts": {
    "start": "concurrently -r --handle-input npm:start:node npm:start:mongo",
    "start:node": "nodemon src/index.js",
    "start:mongo": "mongod --dbpath=data --bind_ip 127.0.0.1 --logpath .mongo-log.txt --logappend",
    "lint": "eslint ./src",
    "test": "jest --watch"
  },
  "dependencies": {
    "apollo-server": "^2.3.1",
    "esm": "^3.1.3",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "module-alias": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.0.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1"
  },
  "_moduleAliases": {
    "@root": "./src"
  },
  "jest": {
    "verbose": false,
    "rootDir": "src",
    "moduleNameMapper": {
      "@root/(.*)$": "<rootDir>/$1"
    }
  }
}
